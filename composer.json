{
  "name": "dotclear/dotclear",
  "description": "Dotclear is an open-source web publishing software.",
  "license": "GPL-2.0-only",
  "authors": [
    {
      "name": "Dotclear Team",
      "email": "dev@dotclear.org"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=8.0.0"
  },
  "require-dev": {
    "atoum/atoum": "dev-master",
    "fzaninotto/faker": "dev-master",
    "atoum/reports-extension": "dev-master",
    "behat/behat": "<3",
    "behat/common-contexts": "1.2.*",
    "behat/mink": ">=1.4,<1.5-dev",
    "symfony/dom-crawler": ">=2.0,<2.4-dev",
    "symfony/translation": "<2.3.0",
    "behat/mink-extension": "1.3.*",
    "behat/mink-goutte-driver": "1.*",
    "phpstan/phpstan": "^1.5",
    "FriendsOfPHP/PHP-CS-Fixer": "^3.8"
  },
  "config": {
    "bin-dir": "bin/"
  },
  "autoload": {
    "psr-4": {
      "Dotclear\\": "src/"
    },
    "files": [
        "src/functions.php"
    ]
  }
}
